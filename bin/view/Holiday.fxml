<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefWidth="700.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.HolidayController">
   <children>
      <VBox alignment="TOP_CENTER" layoutX="142.0" layoutY="75.0" prefWidth="700.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
         <children>
            <HBox alignment="CENTER">
               <children>
                  <Label style="-fx-font-weight: bold;" text="Adicionar Feriado" textAlignment="CENTER">
                     <font>
                        <Font size="25.0" />
                     </font>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <VBox alignment="CENTER">
                     <children>
                        <Label text="Dia do Mês">
                           <font>
                              <Font size="14.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="5.0" />
                           </VBox.margin>
                        </Label>
                        <TextField fx:id="txtDay" promptText="Ex: 15" />
                     </children>
                     <HBox.margin>
                        <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                     </HBox.margin>
                  </VBox>
                  <VBox alignment="CENTER">
                     <children>
                        <Label text="Manhã">
                           <font>
                              <Font size="14.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="5.0" />
                           </VBox.margin>
                        </Label>
                        <TextField fx:id="txtMorning" promptText="descrição" />
                     </children>
                     <HBox.margin>
                        <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                     </HBox.margin>
                  </VBox>
                  <VBox alignment="CENTER">
                     <children>
                        <Label text="Tarde">
                           <font>
                              <Font size="14.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="5.0" />
                           </VBox.margin>
                        </Label>
                        <TextField fx:id="txtAfternoon" promptText="descrição" />
                     </children>
                     <HBox.margin>
                        <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                     </HBox.margin>
                  </VBox>
                  <VBox alignment="CENTER">
                     <children>
                        <Label text="Noite">
                           <font>
                              <Font size="14.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="5.0" />
                           </VBox.margin>
                        </Label>
                        <TextField fx:id="txtNight" promptText="descrição" />
                     </children>
                     <HBox.margin>
                        <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                     </HBox.margin>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" top="5.0" />
               </VBox.margin>
            </HBox>
            <HBox>
               <children>
                  <Label text="Se no dia todo for feriado preencha os três campos (manhã, tarde e notie). Porém se for somente em um ou outro período, deixe os demais sem preencher" wrapText="true">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="13.0" prefWidth="670.0" spacing="20.0">
               <children>
                  <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#handleCancelBtn" stylesheets="@../application/application.css" text="Cancelar">
                     <styleClass>
                        <String fx:value="btn" />
                        <String fx:value="btn-cancel" />
                     </styleClass>
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#handleAddBtn" stylesheets="@../application/application.css" text="Adicionar" textFill="WHITE">
                     <styleClass>
                        <String fx:value="btn" />
                        <String fx:value="btn-confirm" />
                     </styleClass>
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
